guard 'coffeescript', :output => 'js' do
  watch('coffee/(.*)\.coffee')
end

guard 'compass' do
  watch('^scss/(.*)\.s[ac]ss')
  watch('^scss/themes/(.*)\.s[ac]ss')
end

# Anagen stuff
guard 'coffeescript', :output => 'anagen' do
  watch('anagen/(.*)\.coffee')
end

guard 'compass' do
  watch('^anagen/(.*)\.s[ac]ss')
end
